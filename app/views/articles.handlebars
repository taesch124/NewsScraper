{{#if articles}}
    {{#each articles}}
    <div class="card">
        <div class="row">
            <div class="col s4 flex-vertical">
                <img src="{{imageUrl}}">
                {{#if saved}}
                <a class="btn btn-primary red" data-article-id="{{_id}}">Saved</a>
                {{else}}
                <a class="btn btn-primary waves-effect green save-article" data-article-id="{{_id}}">Save Article</a>
                {{/if}}
            </div>
            <div class="col s8">
                <h4>{{title}}</h4>
                <p>{{summary}}</p>
                <h5>By: {{author}}</h5>
                <a href="{{articleUrl}}" target="_blank">View article</a>
            </div>
        </div>

    </div>
    {{/each}}
{{else}}
<script src="/assets/scripts/articles.js"></script>
{{/if}}


<script src="/assets/scripts/saveArticle.js"></script>