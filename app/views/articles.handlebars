<a class="btn btn-primary waves-effect blue scrape" id="scrape">Scrape</a>

{{#if articles}}
    {{#each articles}}
    <div class="card">
        <div class="row">
            <div class="col s4 flex-vertical">
                <img src="{{imageUrl}}">
                {{#unless favorite}}
                <a class="btn btn-primary waves-effect green save-article" data-article-id="{{_id}}">Save Article</a>
                {{/unless}}
            </div>
            <div class="col s8">
                <h3>{{title}}</h3>
                <p>{{summary}}</p>
                <h5>By: {{author}}</h5>
                <a href="{{articleUrl}}" target="_blank">View article</a>
            </div>
        </div>

    </div>
    {{/each}}
{{/if}}
